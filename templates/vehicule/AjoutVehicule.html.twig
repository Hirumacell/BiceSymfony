{% extends 'base.html.twig' %}

{% block title %}BICE WebClient{% endblock %}

{% block body %}
    <div class="container">
        <h1>Ajouter un véhicule</h1>
        <form action="{{ path('AjoutVehicule') }}" method="POST">
            <div class="form-group">
                    <label for="nom">Nom :</label>
                    <input type="text" class="form-control" id="nom" name="nom" required>
            </div>
            <div class="form-group">
                    <label for="immatriculation">Immatriculation :</label>
                    <input type="text" class="form-control" id="immatriculation" name="immatriculation" required>
            </div>
            <div class="form-group">
                    <label for="numero_interne">Numéro interne :</label>
                    <input type="number" class="form-control" id="numero_interne" name="numero_interne" required>
            </div>
            <button type="submit" class="btn btn-primary">Ajouter</button>
        </form>
    </div>
{% endblock %}
