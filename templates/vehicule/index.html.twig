{% extends 'base.html.twig' %}

{% block title %}Hello VehiculeController!{% endblock %}

{% block body %}
    <div class="container">
        <h1>Liste des véhicules utilisées</h1>

        <table class="table">
            <thead>
            <tr>
                <th scope="col">nom</th>
                <th scope="col">immatriculation</th>
                <th scope="col">numero_interne</th>
                <th scope="col">details</th>
            </tr>
            </thead>
            <tbody>
            {% for item in data %}
                <tr>
                    <td>{{ item.nom }}</td>
                    <td>{{ item.immatriculation }}</td>
                    <td>{{ item.numero_interne }}</td>
                    <td>
                        <a class="btn btn-primary" href="#" role="button">Gerer le stock</a>
                    </td>

                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
